{
  "compilerOptions": {
    "lib": ["dom","es2020"],
    "module": "commonjs",
    "target": "es2019",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}